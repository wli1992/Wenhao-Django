# models.py
from django.db import models

class Course(models.Model):
    code = models.CharField(max_length=10)
    name = models.CharField(max_length=100)
    description = models.TextField()
    # Add other fields as needed

# forms.py
from django import forms

class CourseUploadForm(forms.Form):
    file = forms.FileField()

# views.py
from django.shortcuts import render
from .forms import CourseUploadForm

def upload_course(request):
    if request.method == 'POST':
        form = CourseUploadForm(request.POST, request.FILES)
        if form.is_valid():
            handle_uploaded_file(request.FILES['file'])
            # Process the uploaded file and import data into the database
    else:
        form = CourseUploadForm()
    return render(request, 'upload_course.html', {'form': form})

def handle_uploaded_file(file):
    # Implement file handling logic, e.g., save to a temporary location
    pass

<!-- templates/upload_course.html -->
<form method="post" enctype="multipart/form-data">
  {% csrf_token %}
  {{ form }}
  <button type="submit">Upload File</button>
</form>

# urls.py
from django.urls import path
from .views import upload_course

urlpatterns = [
    path('upload/', upload_course, name='upload_course'),
]

# admin.py
from django.contrib import admin
from .models import Course

class CourseAdmin(admin.ModelAdmin):
    change_form_template = 'admin/upload_course/change_form.html'

<!-- templates/admin/upload_course/change_form.html -->
{% extends "admin/change_form.html" %}
{% load static %}

{% block content %}
  {{ block.super }}
  <form method="post" enctype="multipart/form-data">
    {% csrf_token %}
    <input type="file" name="file">
    <button type="submit">Upload File</button>
  </form>
{% endblock %}

# admin.py
from django.contrib import admin
from .models import Course
from .admin import CourseAdmin

admin.site.register(Course, CourseAdmin)

